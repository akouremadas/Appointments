@model IEnumerable<Appointments.Domain.Entities.User>

@{
    ViewBag.Title = "Index";
}

<h3>Index of Users</h3>

<div class="form-group">
    <div>
        <input type="submit" class="btn btn-default btn-info" value="Create New User" onclick="location.href='@Url.Action("Create", "User")'" />
    </div>
    <br />
    <div>
        <input type="button" class="btn btn-default btn-info" value="Show Users to Roles" onclick="location.href='@Url.Action("UsersWithRoles", "User")'" />
    </div>
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AccessFailedCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateUpdated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsDeleted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateDeleted)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DeletedBy)
        </th>
        <th>Actions</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AccessFailedCount)
        </td>
        <td>
            @Html.DisplayTextFor(modelItem => item.DateCreated)
        </td>
        <td>
            @Html.DisplayTextFor(modelItem => item.DateUpdated)
        </td>
        <td>
            @Html.CheckBoxFor(modelItem => item.IsDeleted, new { disabled = "disabled" })
        </td>
        <td>
            @Html.DisplayTextFor(modelItem => item.DateDeleted)
        </td>
        <td>
            @Html.DisplayTextFor(modelItem => item.DeletedBy)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
            @Html.ActionLink("Mark As Inactive", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
