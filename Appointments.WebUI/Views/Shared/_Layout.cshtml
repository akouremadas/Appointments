<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Door2Door Appointments Management System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @RenderSection("Styles", required: false)

</head>
<body>
    @if (User.Identity.IsAuthenticated)
    {
        <nav class="navbar navbar-nav navbar-expand-lg navbar-dark bg-dark fixed-top">
            <div class="container-fluid">
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <img src="~/Content/D2D_Appointments_Logo_134x55.png" alt="D2D AMS" class="mr-auto mt-auto rounded mx-auto d-block" />
                         @*@Html.ActionLink("D2D AMS", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@
                <div class="navbar-collapse collapse" id="navbarSupportedContent">
                    <ul class="nav navbar-nav mr-auto">
                        <li class="nav-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })</li>
                        @if (User.IsInRole("Sales Rep"))
                        {
                            <li class="nav-item">@Html.ActionLink("My Appointments", "Index", "Appointment", null, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("My Clients", "Index", "Client", null, new { @class = "nav-link" })</li>
                        }


                        @if (User.IsInRole("Handler") || User.IsInRole("Team Leader") || User.IsInRole("Supervisor") || User.IsInRole("Admin"))
                        {
                            <li class="nav-item">@Html.ActionLink("All Appointments", "Index", "Appointment", null, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("All Clients", "Index", "Client", null, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Manage Appointments Results", "Index", "Result", null, new { @class = "nav-link" })</li>
                            <li class="nav-item">@Html.ActionLink("Administration", "Index", "Admin", null, new { @class = "nav-link" })</li>
                        }
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </nav>
    }
    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Door2Door Appointments Management System</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
